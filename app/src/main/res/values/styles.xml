<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="MenuButtonStyle" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/size_0</item>
        <item name="android:layout_weight">1</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:insetBottom">@dimen/size_0</item>
        <item name="android:insetTop">@dimen/size_0</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/dark</item>
        <item name="android:textSize">@dimen/text_size_22</item>
        <item name="cornerRadius">@dimen/button_radius_16</item>
        <item name="iconGravity">textStart</item>
        <item name="iconTint">@color/dark</item>
        <item name="iconPadding">@dimen/size_8</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textFontWeight">500</item>
    </style>
    <style name="ToolBarStyle" parent="Widget.MaterialComponents.Toolbar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">0dp</item>
        <item name="navigationIcon">@drawable/ic_arrow_back</item>
    </style>
    <style name="TextHeaderStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/text_size_22</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textFontWeight">500</item>
        <item name="android:textColor">?attr/colorOnSecondary</item>
    </style>
    <style name="SettingsElementStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:baselineAligned">false</item>
        <item name="android:trackTint">@color/gray</item>
        <item name="android:thumbTint">@color/gray</item>
    </style>
    <style name="DarkModeSwitcher">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:baselineAligned">false</item>
    </style>
    <style name="SettingsTextStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingVertical">@dimen/size_21</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:layout_marginStart">@dimen/size_16</item>
        <item name="android:layout_marginEnd">@dimen/size_8</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textColor">?attr/colorOnSecondary</item>
        <item name="android:textSize">@dimen/text_size_16</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textFontWeight">400</item>
    </style>
    <style name="SettingsIconStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_vertical|end</item>
        <item name="android:layout_marginEnd">@dimen/size_12</item>
    </style>
    <style name="EditTextStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textFontWeight">400</item>
        <item name="android:textSize">@dimen/text_size_16</item>
        <item name="android:layout_marginStart">@dimen/size_8</item>
    </style>
    <style name="SearchIconStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:src">@drawable/ic_search_16</item>
    </style>
    <style name="ClearTextIconStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:src">@drawable/ic_crear_text</item>
    </style>
    <style name="YSRegular">
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textFontWeight">400</item>
    </style>
    <style name="Recycleview_Track_Name">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:text">TextView</item>
        <item name="android:textColor">@color/dark</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textFontWeight">400</item>
        <item name="android:textSize">@dimen/text_size_16</item>
    </style>
    <style name="Recycleview_ArtistName_TrackTime">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textFontWeight">400</item>
        <item name="android:text">TextView</item>
        <item name="android:textSize">@dimen/text_size_11</item>
        <item name="android:textColor">@color/gray</item>
        <item name="android:ellipsize">end</item>
        <item name="android:lines">1</item>
    </style>
    <style name="ellipse">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:src">@drawable/ellipse</item>
    </style>
    <style name="SearchingActivityNotFoundMode">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:src">@drawable/track_not_found</item>
    </style>
    <style name="SearchingActivityNetworkProbleMode">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:src">@drawable/no_internet</item>
    </style>
    <style name="PlaceHolderText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_marginTop">@dimen/size_20</item>
        <item name="android:textSize">@dimen/text_size_19</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textFontWeight">400</item>
        <item name="android:textColor">@color/dark</item>
    </style>
    <style name="SearchingActivityButtonStyle" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="backgroundTint">@color/dark</item>
        <item name="cornerRadius">@dimen/button_radius</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textFontWeight">500</item>
        <item name="android:letterSpacing">0</item>
    </style>
    <style name="audio_player_track_image">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_marginStart">@dimen/size_8</item>
        <item name="android:layout_marginEnd">@dimen/size_8</item>
        <item name="android:layout_marginBottom">@dimen/size_24</item>
        <item name="android:layout_marginTop">@dimen/size_28</item>
        <item name="android:background">@drawable/album_1x_placeholder</item>
    </style>
    <style name="audio_player_track_name">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/size_8</item>
        <item name="android:layout_marginEnd">@dimen/size_8</item>
        <item name="android:layout_marginBottom">@dimen/size_12</item>
        <item name="android:layout_marginTop">@dimen/size_24</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textColor">?attr/colorOnSecondary</item>
        <item name="android:textSize">@dimen/text_size_22</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
    </style>
    <style name="audio_player_artist_name">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/size_8</item>
        <item name="android:layout_marginEnd">@dimen/size_8</item>
        <item name="android:layout_marginTop">@dimen/size_12</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textColor">?attr/colorOnSecondary</item>
        <item name="android:textSize">@dimen/text_size_14</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
    </style>
    <style name="audio_player_play_button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/size_30</item>
        <item name="android:layout_marginBottom">12dp</item>
        <item name="android:src">@drawable/play_button</item>
    </style>
    <style name="audio_player_duration_label">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">17dp</item>
        <item name="android:textColor">?attr/colorOnSecondary</item>
    </style>
    <style name="audio_player_title">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">0</item>
        <item name="android:layout_marginBottom">17dp</item>
        <item name="android:textColor">@color/gray</item>
        <item name="android:textSize">13sp</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
    </style>
    <style name="audio_player_data_value">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">17dp</item>
        <item name="android:layout_marginStart">32dp</item>
        <item name="android:gravity">end</item>
        <item name="android:textColor">?attr/colorOnSecondary</item>
        <item name="android:textSize">13sp</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
    </style>
    <style name="audio_player_duration_track_play">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">39dp</item>
        <item name="android:textColor">?attr/colorOnSecondary</item>
        <item name="android:textSize">@dimen/size_14</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
    </style>
    <style name="audio_player_add_button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/size_8</item>
        <item name="android:layout_marginEnd">63dp</item>
        <item name="android:layout_marginBottom">84dp</item>
        <item name="android:src">@drawable/add_to_list_button</item>
    </style>
    <style name="audio_player_like_button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">63dp</item>
        <item name="android:layout_marginEnd">@dimen/size_8</item>
        <item name="android:layout_marginBottom">84dp</item>
        <item name="android:src">@drawable/like_button</item>
    </style>
    <style name="audio_player_back_button">
        <item name="android:layout_width">16dp</item>
        <item name="android:layout_height">16dp</item>
        <item name="android:layout_marginStart">4dp</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:src">@drawable/ic_arrow_back</item>
    </style>

</resources>