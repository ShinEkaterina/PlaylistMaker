<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:background="?android:attr/selectableItemBackground"
    android:layout_height="61dp">

    <ImageView
        android:layout_width="@dimen/size_45"
        android:layout_height="@dimen/size_45"
        android:contentDescription="@string/cover"
        android:id="@+id/ivPlaylist"
        android:layout_weight="0"
        android:layout_marginVertical="8dp"
        tools:src="@drawable/playlist_card_placeholder"
        android:layout_marginStart="@dimen/size_13"/>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="5"
        android:orientation="vertical"
        android:layout_marginHorizontal="10dp">

        <TextView
            style="@style/Recycleview_Track_Name"
            android:id="@+id/tvPlaylistName"
            tools:text="Name of playlist"
            android:ellipsize="end"
            android:maxLines ="1"
            android:layout_marginTop="14dp"/>

        <TextView
            style="@style/Recycleview_ArtistName_TrackTime"
            android:id="@+id/tvCountSongs"
            android:layout_weight="1"
            android:ellipsize="end"
            android:maxLines ="1"
            tools:text="Count of songs"
            android:layout_marginBottom="5dp"/>
    </LinearLayout>

</LinearLayout>