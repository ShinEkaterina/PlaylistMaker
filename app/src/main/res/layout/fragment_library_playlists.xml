<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingTop="24dp">

        <Button
            android:id="@+id/btnPlaylistCreate"
            style="@style/button_create_new_playlist"
            android:layout_width="160dp"
            android:layout_height="50dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="46dp"
            android:text="@string/newPlaylist"
            android:textAllCaps="false"
            android:textFontWeight="500"
            app:cornerRadius="54dp"
            tools:text="@string/newPlaylist" />

        <LinearLayout
            android:id="@+id/llErrorWidget"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/ivNoFavTracks"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_gravity="center_horizontal"
                android:scaleType="centerCrop"
                android:src="@drawable/track_not_found"
                tools:src="@drawable/track_not_found" />

            <TextView
                android:id="@+id/tvPlaceholder"
                style="@style/placeholder_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/ys_display_medium"
                android:gravity="center_horizontal"
                android:paddingHorizontal="24dp"
                android:paddingTop="16dp"
                android:paddingBottom="24dp"
                android:text="@string/noPlaylistFound"
                android:textSize="19sp"
                tools:text="@string/noPlaylistFound" />
        </LinearLayout>

        <ProgressBar
            android:id="@+id/loading_indicator"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:layout_gravity="center"
            android:layout_marginTop="50dp"
            android:indeterminateTint="@color/blue"
            android:visibility="gone" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvPlaylists"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            tools:listitem="@layout/playlist_view_card" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
