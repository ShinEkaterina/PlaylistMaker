<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.playlistmaker.library.ui.tracks.fragment.FavoriteTracksFragment">

    <Button
        android:layout_width="160dp"
        android:layout_height="50dp"
        android:id="@+id/btnPlaylistCreate"
        android:text="@string/newPlaylist"
        android:textColor="@color/white"
        android:textSize="14sp"
        android:textFontWeight="500"
        android:fontFamily="@font/ys_display_medium"
        tools:text="@string/newPlaylist"
        android:textAllCaps="false"
        app:cornerRadius="54dp"
        android:backgroundTint="@color/dark"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="46dp"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/clErrorWidget"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/ivNoFavTracks"
            style="@style/plaseholder_image"
            android:layout_marginTop="106dp"
            android:src="@drawable/track_not_found"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tvPlaceholder"
            style="@style/placeholder_text"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:gravity="center"
            android:text="@string/noPlaylistFound"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/ivNoFavTracks" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <ProgressBar
        android:id="@+id/loading_indicator"
        android:layout_width="44dp"
        android:layout_height="44dp"
        android:layout_gravity="center"
        android:layout_marginTop="50dp"
        android:indeterminateTint="@color/blue"
        android:visibility="gone" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvPlaylists"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="24dp"
        android:background="@android:color/transparent"
        android:visibility="gone"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        tools:listitem="@layout/playlist_view_card" />
</FrameLayout>