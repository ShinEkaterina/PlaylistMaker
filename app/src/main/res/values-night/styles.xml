<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="SearchIconStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="ClearTextIconStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="ToolBarStyle" parent="Widget.MaterialComponents.Toolbar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">0dp</item>
    </style>

    <style name="Recycleview_Track_Name">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:text">TextView</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textFontWeight">400</item>
        <item name="android:textSize">@dimen/text_size_16</item>
    </style>

    <style name="Recycleview_ArtistName_TrackTime">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textFontWeight">400</item>
        <item name="android:text">TextView</item>
        <item name="android:textSize">@dimen/text_size_11</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:ellipsize">end</item>
        <item name="android:lines">1</item>
    </style>

    <style name="ellipse">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="SearchingActivityNotFoundMode">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="SearchingActivityNetworkProbleMode">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="PlaceHolderText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_marginTop">@dimen/size_20</item>
        <item name="android:textSize">@dimen/text_size_19</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textFontWeight">400</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="SearchingActivityButtonStyle" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="backgroundTint">@color/white</item>
        <item name="cornerRadius">@dimen/button_radius</item>
        <item name="android:textColor">@color/dark</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textFontWeight">500</item>
    </style>

    <style name="audio_player_add_button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/size_8</item>
        <item name="android:layout_marginEnd">63dp</item>
        <item name="android:layout_marginBottom">84dp</item>
    </style>

    <style name="audio_player_like_button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">63dp</item>
        <item name="android:layout_marginEnd">@dimen/size_8</item>
        <item name="android:layout_marginBottom">84dp</item>
    </style>

    <style name="DarkModeSwitcher">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:baselineAligned">false</item>
        <item name="thumbTint">@color/blue</item>
        <item name="trackTint">@color/transparent_blue</item>
    </style>

    <style name="placeholder_text">
        <item name="android:layout_width">312dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">19sp</item>
    </style>

    <style name="button_create_new_playlist">
        <item name="android:textAllCaps">false</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:textColor">@color/dark</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="cornerRadius">54dp</item>
        <item name="android:gravity">center</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textSize">14sp</item>
    </style>
</resources>